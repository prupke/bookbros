<!DOCTYPE html>
<html lang = 'en'>
  <head>
    <title>Book Bros</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <meta charset="UTF-8">
    <link href="https://fonts.googleapis.com/css?family=Roboto+Mono|ZCOOL+KuaiLe|Archivo" rel="stylesheet"> 
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- <link rel="icon" type="image/icon" href="/assets/favicon.ico"> -->
    <%= favicon_link_tag '/assets/bookbros.ico' %>

  </head>

  <body>
    <nav>
        <ul>
            <li class="nav-logo-container"><img class="nav-logo" src="/assets/bookbros_logo.png" alt="" \></li> 
            <li class="nav-links">
                <ul>
                    <li>
                        <%= link_to "Home", home_path %>
                    </li>
                    <li>
                        <%= link_to "Find a book", books_path %>
                            
                    </li>
                    <!-- <li class="club-nav">
                        Club: <br><%= session['club'] %>, id: <%= session['id'] %> <br> user: <%= session['name'] %>
                    </li> -->
                    <li>
                        <% if session['club'] %>
                        <%= link_to "My Club", club_path(session['club']) %>
                        <% else %>
                        <!-- <%= link_to "Clubs", new_club_path %> -->
                        <%= link_to "Clubs", clubs_path %>
                        <% end %>
                    </li>

                </ul>
                <span id="hamburger-menu">â‰¡</span>
            </li>
        </ul>
    </nav>
    <% if notice %>
      <p id="notice"><%= notice %></p>
    <% end %>
    <%= yield %>
    <footer>
        <p id="copyright">
            <span>Created by<a href="https://github.com/prupke">Paul Rupke</a></span>
        </p>

    </footer>
    <script>
        var delay = ( function() {
        var timer = 0;
        return function(callback, ms) {
            clearTimeout (timer);
            timer = setTimeout(callback, ms);
        };
        })();
        (function() {
            delay(function(){
            document.getElementById('notice').style.opacity = "0";
            }, 2000 );
        })();
    </script>
  </body>
</html> 
