

<%= form_for @club do |form| %>

    <ul class="new-club-form">

        <% if club.errors.any? %>

        <li id="error_explanation">
            <!-- <h2><%= pluralize(club.errors.count, "error") %>:</h2> -->

            <ul>
                <% club.errors.full_messages.each do |message| %>
